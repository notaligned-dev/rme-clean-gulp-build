{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prefer-destructuring": "warn"
  }
}
